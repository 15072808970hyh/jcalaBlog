<div id="page-wrapper">
    <div class="row">
        <div class="col-md-12 column">
                <form name="resumeForm" class="form-inline">
                    <input type="hidden" name="md">
                    <input type="hidden" name="resume">
                    <div>
                        <button class="btn btn-primary btn-lg btn-block" id="sub-resume" style="width: 250px;margin: 0 auto">Update</button>
                    </div>
                </form>
        </div>
