      </div><!-- /#page-wrapper -->
	  
      <div id="page-wrapper">
        <div class="row">
          <div class="col-md-12 column">
			<iframe src="/html/editor.html" id="mdEditor" width="100%" height="750" scrolling="no" frameborder="0"></iframe>
		</div>
        </div><!-- /.row -->
      </div><!-- /#page-wrapper -->

    </div><!-- /#wrapper -->

    <!-- JavaScript -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.bootstrap-growl.min.js"></script>
    <script type="text/javascript">
        $(function() {
            var id=${myId};
            if (id==1){
                setTimeout(function() {
                    $.bootstrapGrowl("Save sucess!", {
                        type: 'success',
                        align: 'center',
                        width: 'auto',
                        allow_dismiss: false
                    });
                }, 0);
            }else if(id==2){
                setTimeout(function() {
                    $.bootstrapGrowl("Save fail!", {
                        type: 'danger',
                        align: 'center',
                        width: 'auto',
                        allow_dismiss: false
                    });
                }, 0);
            }
        });
        function saveBlog() {
            var form = document.forms[0];
            form.action = "/admin/saveBlog";
            form.method = "post";
            var editor = document.getElementById('mdEditor').contentWindow;
            document.blogForm.article.value=editor.document.getElementsByTagName("article")[0].innerHTML;
            form.submit();
        }

    </script>
  </body>
</html>