#macro(flip $pageNum  $current)
    #set( $arr = [0..$pageNum] )
<ul class="pagination">
    #if($current<2)
        <li class="disabled"><a href="#">&laquo;</a></li>
    #else
        #set($lastPage = $current - 1)
        <li><a href="/admin/blogList/$lastPage">&laquo;</a></li>
    #end
    #foreach($page in $arr)
        #if($page > 0)
            #if($current==$page)
                <li class="active"><a href="/admin/blogList/$page">$page</a></li>
            #else
                <li><a href="/admin/blogList/$page">$page</a></li>
            #end
        #end
    #end
    #if($current>=$pageNum)
        <li class="disabled"><a href="#">&raquo;</a></li>
    #else
        #set($nextPage = $current + 1)
        <li><a href="/admin/blogList/$nextPage">&raquo;</a></li>
    #end
</ul>
#end

#macro(liClass $count)
    #if($count==1)
    <tr class="active">
    #elseif($count==2)
    <tr class="success">
    #elseif($count==3)
    <tr class="warning">
    #else
    <tr class="danger">
    #end
#end

#macro(frontFlip $pageNum $current)
    #set($prev = $current - 1)
    #set($next = $current + 1)
    #if($pageNum<=1)
        #elseif($current<=1)
            <a href="/archives/$next" class="btn btn-default btn-lg" style="float: right"><i class="fa fa-chevron-right fa-fw"></i> <span class="network-name">Next</span></a>
        #elseif($current>=$pageNum)
            <a href="/archives/$prev" class="btn btn-default btn-lg"><i class="fa fa-chevron-left fa-fw"></i> <span class="network-name">Prev</span></a>
        #else
            <a href="/archives/$prev" class="btn btn-default btn-lg"><i class="fa fa-chevron-left fa-fw"></i> <span class="network-name">Prev</span></a>
            <a href="/archives/$next" class="btn btn-default btn-lg" style="float: right"><i class="fa fa-chevron-right fa-fw"></i> <span class="network-name">Next</span></a>
    #end
#end