    <script type="text/javascript">
        $(function () {
            $("#updateSub").bind('click', function(){
                var form = document.forms[0];
                form.action = "/admin/info.action";
                form.method = "post";
                form.submit();
            });
            $("#passSub").bind('click', function(){
                var form = document.forms[1];
                form.action = "/admin/pass.action";
                form.method = "post";
                form.submit();
            });
