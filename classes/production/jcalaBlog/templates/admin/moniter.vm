      <div id="page-wrapper">

        <div class="row">
          <div class="col-lg-12">
            <div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i>The number of visits</h3>
              </div>
              <div class="panel-body">
                <div id="number-visits"></div>
              </div>
            </div>
          </div>
        </div><!-- /.row -->

        <div class="row">
          <div class="col-lg-6">
            <div class="panel panel-success">
              <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i>The usage of memory</h3>
              </div>
              <div class="panel-body">
                <div id="memory-donut"></div>
              </div>
            </div>
          </div>
            <div class="col-lg-6">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-long-arrow-right"></i>The usage of CPU</h3>
                    </div>
                    <div class="panel-body">
                        <div id="cpu-donut"></div>
                    </div>
                </div>
            </div>
        </div><!-- /.row -->

      </div><!-- /#page-wrapper -->

    </div><!-- /#wrapper -->

    <!-- JavaScript -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    <!-- Page Specific Plugins -->    <script src="/js/raphael-min.js"></script>
    <script src="/js/morris-0.4.3.min.js"></script>
    <script src="/js/chart-data-morris.js"></script>
   <script type="text/javascript">
       Morris.Area({
           element: 'number-visits',
           data: [
                   #foreach($vi in ${VsiterList})
                       { d: '${vi.Day}', visits: ${vi.Size} },
                   #end
           ],
           xkey: 'd',
           ykeys: ['visits'],
           labels: ['Visits'],
           smooth: false,
       });
       Morris.Donut({
           element: 'memory-donut',
           data: [
               {value: 70, label: 'Used memory'},
               {value: 30, label: 'Residual memory'}
           ],
           backgroundColor: '#ccc',
           labelColor: '#060',
           colors: [
               '#0BA462',
               '#95D7BB'
           ],
           formatter: function (x) { return x + "%"}
       });
       Morris.Donut({
           element: 'cpu-donut',
           data: [
               {value: 5, label: 'Used CPU'},
               {value: 95, label: 'Residual CPU'}
           ],
           backgroundColor: '#ccc',
           labelColor: '#060',
           colors: [
               '#0BA462',
               '#95D7BB'
           ],
           formatter: function (x) { return x + "%"}
       });
   </script>

